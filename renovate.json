{
  "extends": [
    "config:base",
    "group:emotionMonorepo",
    "group:jestMonorepo",
    "group:reactMonorepo",
    "group:storybookMonorepo"
  ],
  "timezone": "Asia/Tokyo",
  "labels": ["dependencies"],
  "rebaseLabel": ":zap:",
  "unpublishSafe": true,
  "semanticCommits": true,
  "semanticCommitType": "update",
  "semanticCommitScope": null,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "updateTypes": ["patch"],
      "enabled": false
    },
    {
      "packagePatterns": ["^@types/"],
      "description": "これは自動マージ対象です",
      "automerge": true
    },
    {
      "groupName": "@loadable",
      "packagePatterns": ["^@loadable/", "^@types/loadable__"]
    },
    {
      "groupName": "hls.js",
      "packagePatterns": ["^hls.js$", "^@types/hls.js$"]
    },
    {
      "groupName": "webpack",
      "packagePatterns": ["^webpack$", "^@types/webpack$"]
    }
  ]
}
