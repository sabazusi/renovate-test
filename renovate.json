{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:emotionMonorepo",
    "group:jestMonorepo",
    "group:reactMonorepo",
    "group:storybookMonorepo",
    "group:typescript-eslintMonorepo",
    "npm:unpublishSafe"
  ],
  "timezone": "Asia/Tokyo",
  "labels": ["A-dependencies :package:", "S-awaiting-review :star2:"],
  "rebaseLabel": "S-needs-rebase :zap:",
  "vulnerabilityAlerts": {
    "labels": ["A-security :lock:"]
  },
  "prConcurrentLimit": 0,
  "prHourlyLimit": 10,
  "schedule": ["before 8am every weekday", "every weekend"],
  "semanticCommits": "enabled",
  "semanticCommitType": "renovate",
  "semanticCommitScope": "",
  "ignorePaths": [".github/"],
  "patch": {},
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "enabled": false
    },
    {
      "description": "framework chunksに分類されるパッケージです。",
      "matchPackagePatterns": [
        "^@loadable/component$",
        "^@sentry/browser$",
        "^ab-testing$",
        "^axios$",
        "^react-dom$",
        "^react-helmet-async$",
        "^react-redux$",
        "^react-router-dom$",
        "^react-router$",
        "^react$",
        "^redux$"
      ],
      "labels": ["A-dependencies-framework"]
    },
    {
      "description": "product codeに影響しない依存パッケージはauto mergeの対象とします",
      "matchPackagePatterns": [
        "^@types/",
        "^eslint",
        "^stylelint",
        "^prettier",
        "nock",
        "morgan",
        "puppeteer",
        "scaffdog"
      ],
      "commitMessagePrefix": "[automerge1]",
      "automerge": true
    },
    {
      "description": "jest/ts-eslint monorepoもautomergeを有効にします",
      "extends": ["group:jestMonorepo", "group:typescript-eslintMonorepo"],
      "matchDepTypes": ["devDependencies"],
      "commitMessagePrefix": "[automerge2]",
      "automerge": true
    },
    {
      "description": "VRT系（kapetanios置き換え後remove予定）",
      "groupName": "reg-viz",
      "matchPackagePatterns": ["^reg-suit$", "^reg-*-plugin"]
    }
  ]
}
